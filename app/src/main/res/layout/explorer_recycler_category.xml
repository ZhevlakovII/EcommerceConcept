<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/category_button"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:shapeAppearanceOverlay="@style/EcommerceConceptThemes.CategoryButton"
        android:backgroundTint="@color/buttons_background"
        app:icon="@drawable/icon_smartphones"
        app:iconTint="@color/buttons_icon_tint"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:theme="@style/EcommerceConceptThemes"
        android:insetBottom="0dp"
        android:insetLeft="0dp"
        android:insetRight="0dp"
        android:insetTop="0dp"/>

    <TextView
        android:id="@+id/category_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/category_name"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
        android:textColor="@color/secondaryColor"/>

</LinearLayout>