<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:startIconDrawable="@drawable/icon_search"
        app:startIconTint="@color/primaryColor"
        android:theme="@style/EcommerceConceptThemes"
        android:hint="@string/search">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/search_edit_text"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:theme="@style/EcommerceConceptThemes"
            android:textSize="12sp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/search_button_qr"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="32dp"
        app:shapeAppearanceOverlay="@style/EcommerceConceptThemes.CategoryButton"
        android:backgroundTint="@color/primaryColor"
        app:icon="@drawable/icon_qr"
        app:iconSize="24dp"
        android:gravity="center"
        app:iconTint="@color/secondaryColor"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:theme="@style/EcommerceConceptThemes"
        android:insetBottom="0dp"
        android:insetLeft="0dp"
        android:insetRight="0dp"
        android:insetTop="0dp"/>

</LinearLayout>